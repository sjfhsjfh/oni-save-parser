{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "stripInternal": true,
    "strict": true,
    "noImplicitAny": false,
    "useUnknownInCatchVariables": false,
    "forceConsistentCasingInFileNames": true,
    "outDir": "./lib",
    "declaration": true,
    "declarationDir": "./dts",
    "sourceMap": true
  },
  "exclude": ["src/old/**/*"],
  "include": ["src/**/*"],
}
